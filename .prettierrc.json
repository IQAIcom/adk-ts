{
	"semi": true,
	"singleQuote": false,
	"trailingComma": "all",
	"printWidth": 80,
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"bracketSameLine": false,
	"overrides": [
		{
			"files": ["*.md", "*.mdx"],
			"options": {
				"useTabs": false,
				"tabWidth": 2,
				"proseWrap": "preserve"
			}
		}
	]
}
