{
	"name": "adk-telegram-bot",
	"version": "0.0.1",
	"description": "ADK Telegram Bot - A starter project for creating AI-powered Telegram bots with ADK",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"clean": "rimraf dist",
		"prebuild": "pnpm clean",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"prepare": "husky",
		"precommit": "lint-staged"
	},
	"lint-staged": {
		"*.{ts,js,json}": ["biome check --write"]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/IQAICOM/adk-telegram-bot.git"
	},
	"keywords": ["ai", "agent", "mcp", "adk-ts", "IQAI", "telegram", "bot"],
	"author": "IQAI",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/IQAICOM/adk-telegram-bot/issues"
	},
	"homepage": "https://github.com/IQAICOM/adk-telegram-bot#readme",
	"dependencies": {
		"@iqai/adk": "^0.1.8",
		"dotenv": "^17.2.0",
		"zod": "^4.0.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.1",
		"@types/node": "^22.16.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"rimraf": "^6.0.1",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3"
	}
}
