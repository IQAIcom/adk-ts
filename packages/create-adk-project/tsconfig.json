{
	"extends": "@iqai/tsconfig/base.json",
	"compilerOptions": {
		"outDir": "dist",
		"module": "ES2022",
		"target": "ES2022",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"declaration": true,
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
