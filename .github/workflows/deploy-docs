name: Generate Documentation

on:
  push:
    branches: [main, master]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'
        
      - name: Install Dependencies
        run: npm ci
        
      - name: Generate Documentation
        run: npm run docs
        
      - name: Upload Documentation
        uses: actions/upload-artifact@v4
        with:
          name: documentation
          path: './docs'
          retention-days: 7 
